@using System.Web.Optimization

<div id="ContainerBalanceShared">
    <div class="form-inline row">
        <div class="form-group col-md-6">
            <label class="control-label container-fluid" id="lblBalanceSharedAccount">Cuenta:&nbsp;</label>
        </div>
        <div class="form-group col-md-6">
            <label class="control-label container-fluid" id="lblBalanceSharedTelephone">Teléfono:&nbsp;</label>
        </div>


    </div>


    <div class="panel panel-info ">
        <div class="panel-heading claro-modal-contenido-titulo-panel">
            <h4 class="panel-title  claro-modal-contenido-titulo-texto">
                <a data-toggle="collapse" href="#DatosLcollapse"> Datos de Bolsa</a>
            </h4>

        </div>
        <div id="DatosLcollapse" class="panel-collapse collapse in table-responsive">
            <table id="tblBalanceSharedBag" class="table table-bordered table-condensed claro-modal-tabla">
                <thead>
                    <tr class="claro-bg-primary">
                        <td class="text-center">Grupo de la Bolsa</td>
                        <td class="text-center">Nombre Comercial de la Bolsa</td>
                        <td class="text-center">Tipo de Unidad</td>
                        <td class="text-center">Unidades Asignadas</td>
                        <td class="text-center">Consumo</td>
                        <td class="text-center">Saldo Disponible</td>
                        <td class="text-center">Fecha de Expiración</td>


                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="form-inline row"></div>
    <div class="panel panel-info ">
        <div class="panel-heading claro-modal-contenido-titulo-panel">
            <h4 class="panel-title claro-modal-contenido-titulo-texto">
                <a data-toggle="collapse" href="#DatosBcollapse"> Datos de las Líneas</a>
            </h4>

        </div>
        <div id="DatosBcollapse" class="panel-collapse collapse in table-responsive">
            <table id="tblBalanceSharedLine" class="table table-bordered table-condensed claro-modal-tabla">
                <thead>
                    <tr class="claro-bg-primary">
                        <td class="text-center">Línea</td>
                        <td class="text-center">Nombre Comercial de la Bolsa</td>
                        <td class="text-center">Tipo de Unidad</td>
                        <td class="text-center">Unidades Asignadas</td>
                        <td class="text-center">Consumo</td>
                        <td class="text-center">Saldo Disponible</td>
                        <td class="text-center">Fecha de Expiración</td>



                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">

            <label class="control-label container-fluid" id="lblBalanceSharedTotalRows">Total de Registros:&nbsp;</label>
        </div>
        <div class="col-md-12">

            <div class="text-center"><label id="lblMensaje" class="label-red-service"></label></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">

            <button type="button" class="btn claro-btn-info btn-xs" data-toggle="modal" id="btnPost_BalanceSharedExport" name="btnPost_BalanceSharedExport">Exportar</button>
        </div>

    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataService/PostpaidBalanceShared")