@using System.Web.Optimization

<div id="ContainerConsumptionRecharge">

    <div class="form-inline row">
        <div class="form-group col-md-12 text-left">
            <label class="control-label " id="lblDateConsumption">Fecha del Evento:&nbsp;</label>
            <label class="control-label  ">Fecha Desde:</label>
            <div class="input-daterange input-group" id="containerDateRangeInLine">
                <input type="text" id="txtlblDateStartConsumption" class="input-sx form-control  " name="txtlblDateStartConsumption" readonly />
                <label class="input-group-addon btn" for="txtlblDateStartConsumption">
                    <span class="glyphicon glyphicon-calendar"></span>
                </label>
                <span class="input-group-addon"><label class="control-label">Hasta:</label></span>
                <input type="text" id="txtlblDateEndConsumption" class="input-sx form-control  " name="txtlblDateEndConsumption" readonly />
                <label class="input-group-addon btn" for="txtlblDateEndConsumption">
                    <span class="glyphicon glyphicon-calendar"></span>
                </label>

            </div>
            <label class="control-label  ">Tipo de Consumo: </label>
            <select id="cboConsumptionType" class="form-control input-sx  "></select>
        </div>


    </div>
    <div class="form-inline row">
        <div class="form-group col-md-6 text-right">
            <button type="button" class="btn claro-btn-info btn-sm" data-toggle="modal" id="btnSearchConsumptionRecharge" name="btnSearchConsumptionRecharge">Buscar</button>
        </div>
        <div class="form-group col-md-6 text-left">
            <button type="button" class="btn claro-btn-info btn-sm" data-toggle="modal" id="btnCleanConsumptionRecharge" name="btnCleanConsumptionRecharge">Limpiar</button>
        </div>

    </div>

    <table id="tblConsumptionRecharge" class="table table-bordered table-condensed claro-modal-tabla">
        <thead>
            <tr class="claro-bg-primary">
                <td class="text-center">Fecha del Evento</td>
                <td class="text-center">Tipo Consumo</td>
                <td class="text-center">Número de Destino - APN</td>
                <td class="text-center">ID de Bolsa</td>
                <td class="text-center">Monto Consumido</td>
                <td class="text-center">Saldo</td>



            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="row">

        <div class="col-md-12">

            <div class="text-center"><label id="lblMensaje" class="label-red-service"></label></div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataService/ConsumptionHistoricalRecharge")

