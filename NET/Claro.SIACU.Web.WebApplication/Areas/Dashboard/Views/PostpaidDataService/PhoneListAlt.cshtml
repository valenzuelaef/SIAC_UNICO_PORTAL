@using System.Web.Optimization
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.Postpaid.DataLineServiceModel
<div id="modal-content">

    <div id="PostpaidPhoneListAlt">

        <div class="row">
            <div class="col-md-5 form-group">
                <label class="control-label col-sm-3" for="lblPost_PhoneListContractId">Contrato:</label>
                <div class="col-sm-9">
                    <input type="text" id="lblPost_PhoneListContractId" class="form-control input-sm col-sm-11 pull-right" maxlength=9 />
                </div>
            </div>

            <div class="col-md-6">
                <button type="button" class="btn claro-btn-info btn-sm" data-toggle="modal" id="btnPost_TelephoneAltSearch">Buscar</button>
                <button type="button" class="btn claro-btn-info btn-sm" data-toggle="modal" id="btnPost_TelephoneAltClear">Limpiar</button>
                <button type="button" class="btn claro-btn-info btn-sm" data-toggle="modal" id="btnPost_TelephoneAltHistory">Historial de Lineas</button>
            </div>

        </div>



        <div id="divPostListAltSearch">
            <table id="tbPostListAltSearch" class="table  table-striped table-hover table-responsive claro-modal-tabla">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">Nro</th>
                        <th class="col-sm-2">Tel&#233;fono</th>
                        <th class="col-sm-2">Estado de Linea</th>
                        <th class="col-sm-2">Contrato</th>


                    </tr>
                </thead>
                <tbody>
                    @{if (Model.lstServices != null)
                    {

                        foreach (var item in Model.lstServices)
                        {

                            <tr>
                                <td></td>
                                <td>@item.CellPhone</td>
                                <td>@item.StateLine</td>
                                <td>@Model.ContractID</td>
                            </tr>

                        }
                    }}



                </tbody>
            </table>
        </div>


    </div>



</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataService/PostpaidPhoneListAlt")

