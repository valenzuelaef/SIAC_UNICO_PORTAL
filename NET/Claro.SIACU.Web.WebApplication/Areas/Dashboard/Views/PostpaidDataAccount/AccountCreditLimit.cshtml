@using System.Web.Optimization;
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PostpaidDataAccount.AccountCreditLimitModel

<div id="ContentPostpaidAccountCreditLimit">
    <div id="modal-content">
        <div class="row">
            <div class="col-md-12">

                <table class="table table-condensed form-horizontal">
                    <tr>
                        <td class="col-md-12">
                            <div class="col-md-1">
                                <label class="control-label">Cuenta</label>
                            </div>
                            <div class="col-md-5">
                                <label class="control-label">@Model.Account</label>
                            </div>
                            <div class="col-md-1">
                                <label class="control-label">Cliente</label>
                            </div>
                            <div class="col-md-3">
                                <label class="control-label">@Model.BusinessName</label>
                            </div>

                        </td>
                    </tr>
                </table>

            </div>
        </div>

        <div class="panel panel-default ">
            <table class="table  table-striped table-hover table-responsive claro-modal-tabla" id="tblCreditLimit">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">SMS1</th>
                        <th class="col-sm-1">SMS2</th>
                        <th class="col-sm-1">Tiene PAC</th>
                        <th class="col-sm-1">Monto Pac</th>
                        <th class="col-sm-1">N&#176; PAC</th>
                        <th class="col-sm-1">Fecha Bloq. Programada</th>
                        <th class="col-sm-1">Fecha Bloq Ejecutada</th>
                        <th class="col-sm-1">Total Consumo</th>
                        <th class="col-sm-1">Cargo Fijo</th>
                        <th class="col-sm-1">Cargo Adicional</th>
                        <th class="col-sm-1">Cargo Prorrateado</th>
                        <th class="col-sm-1">Fec Desbloq Ejecutada</th>
                        <th class="col-sm-1">Pagos</th>
                    </tr>
                </thead>
                <tbody>
                    @if (@Model.lstAccountCreditLimit != null)
                    {
                        foreach (var item in @Model.lstAccountCreditLimit)
                        {
                            <tr>
                                <td class="col-sm-1">@item.Fecha_Marca_SMS1</td>
                                <td class="col-sm-1">@item.Fecha_Marca_SMS2</td>
                                <td class="col-sm-1">@item.Tiene_Pac</td>
                                <td class="col-sm-1">@item.Monto_Pac</td>
                                <td class="col-sm-1">@item.Numero_Pac</td>
                                <td class="col-sm-1">@item.Fecha_Bloq_Programada</td>
                                <td class="col-sm-1">@item.Fecha_Bloq_Ejecucion</td>
                                <td class="col-sm-1">@item.Monto_Consumido</td>
                                <td class="col-sm-1">@item.Cargo_Fijo</td>
                                <td class="col-sm-1">@item.Cargo_Adicional</td>
                                <td class="col-sm-1">@item.Cargo_Prorrat</td>
                                <td class="col-sm-1">@item.Fecha_Desbloq_Ejecucion</td>
                                <td class="col-sm-1"><a id="lknverpagos" role="button">Ver</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                       <tr><td colspan="13" class="text-center">No existen datos</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataAccount/PostpaidAccountCreditLimit")
