@using System.Web.Optimization;
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PostpaidDataAccount.AccountPinPukModel
<div id="ContentPostpaidAccountPinPuk">
    <div id="modal-content">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-condensed">
                    <tr>
                        <td class="col-md-12">
                            <div class="col-md-1">
                                <label class="control-label">Cuenta:</label>
                            </div>
                            <div class="col-md-3">@Model.Account</div>
                            <div class="col-md-1">
                                <label class="control-label">Cliente:</label>
                            </div>
                            <div class="col-md-5">@Model.BusinessName</div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="panel panel-default ">
            <table class="table  table-striped table-hover table-responsive claro-modal-tabla" id="tblPinPuk">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-2">ICC ID</th>
                        <th class="col-sm-2">IMSI</th>
                        <th class="col-sm-2">TELEFONO</th>
                        <th class="col-sm-2">PIN1</th>
                        <th class="col-sm-2">PUK1</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.lstAccountPinPuk != null)
                    {
                        foreach (var item in Model.lstAccountPinPuk)
                        {
                        <tr>
                            <td class="col-sm-2">@item.ICC_IC</td>
                            <td class="col-sm-1">@item.IMSI</td>
                            <td class="col-sm-1">@item.MSISDN</td>
                            <td class="col-sm-1">@item.PIN1</td>
                            <td class="col-sm-1">@item.PUK1</td>
                        </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table table-condensed">
                    <tr>
                        <td class="col-md-12">
                            <div class="col-md-2">
                                <label class="control-label">Total de Registros:</label>
                            </div>
                            <div class="col-md-3">@Model.lstAccountPinPuk.Count</div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataAccount/PostpaidAccountPinPuk")


