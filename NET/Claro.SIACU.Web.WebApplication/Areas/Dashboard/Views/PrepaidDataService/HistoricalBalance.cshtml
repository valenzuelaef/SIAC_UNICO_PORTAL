@using System.Web.Optimization;
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PrepaidDataService.HistoricalBalanceModel


@{
    Layout = null;

}
<div id="containerHistoricalBalance">
    <div class="form-inline">
        <div class="form-group">
            <label class="control-label">Fecha de Vencimiento Desde:</label>
            <div class="input-daterange input-group" id="containerDateRangeHistoricalBalance">
                <input type="hidden" id="hidendDateHistoricalBalance" value=@Model.endDateHistoricalBalance  />
                <input type="hidden" id="hidstartDateHistoricalBalance" value=@Model.startDateHistoricalBalance  />
                <input type="text" id="txtDateStartHistoricalBalance" class="input-sm form-control" name="txtDateStartHistoricalBalance" readonly />
                <span class="input-group-addon"><label class="control-label">Hasta:</label></span>
                <input type="text" id="txtDateEndHistoricalBalance" class="input-sm form-control" name="txtDateEndHistoricalBalance" readonly />
            </div>
        </div>

        <button type="button" id="btnSearchHistoricalBalance" class="btn claro-btn-info btn-sm">Buscar</button>
        <button type="button" id="btnCleanSearchHistoricalBalance" class="btn claro-btn-info btn-sm">Limpiar</button>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table id="tblHistoricalBalance" class="table  table-striped table-hover claro-modal-tabla table-bordered">
                <thead class="claro-bg-primary">
                    <tr>
                        <th>Grupo/Bono/Promoción</th>
                        <th>Nombre Comercial de la Bolsa</th>
                        <th>Destino</th>
                        <th>Saldo</th>
                        <th>Unidad</th>
                        <th>Vencimiento</th>
                        <th>Comprado/Regalado</th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <div id="errorInline"></div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PrepaidHistoricalBalance/HistoricalBalance")

