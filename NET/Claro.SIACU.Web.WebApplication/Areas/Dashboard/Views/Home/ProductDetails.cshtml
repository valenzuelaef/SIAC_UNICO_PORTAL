@using System.Web.Optimization;
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PostpaidProductDetailModel

@{
    Layout = null;
}

<!DOCTYPE html>

<div id="contenedor-detail">

    <div class="panel panel-default ">
        <div class="table-responsive">
            @*<table id="tblDetailPostpaid" class="table  table-striped table-hover table-responsive claro-modal-tabla Services dataTable no-footer">*@
                <table id="tblDetailPostpaid" class="table   table-hover table-responsive table-curved claro-modal-tabla">

                <thead class="claro-bg-primary">
                    <tr class="claro-bg-primary ">
                        <th class="col-md-4 text-center"><p>Nro. Línea / Nro. Contrato /</p> Nro. Servicio</th>
                        <th class="col-md-3 text-center">Estado</th>
                        @if (Model.StateLines == "A")
                        {
                            <th class="col-md-5 text-center"> Fecha Activación </th>
                        }
                        else
                        {
                            <th class="col-md-5 text-center">Última Fecha de Cambio Estado  </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (Model.listProducDetailPost != null)
                        {
                            foreach (var item in Model.listProducDetailPost)
                            {
                        <tr>
                           @if (Model.TypeProduct == "HFC" || Model.TypeProduct == "LTE")
                           {
                                    if (item.State == "PREACTIVO")
                                    {
                                        <td class="col-md-4 text-center"><a href="javascript:void(0);" onclick="CustomerPreactivo()">@item.CoId</a></td>
                                    }
                                    else
                                    {
                            <td class="col-md-4 text-center"><a href="javascript:void(0);" onclick="CustomerSearch('@(Model.TypeProduct)', '@(item.CoId)')">@item.CoId</a></td>

                           }
                                }
                                else
                                {
                                    if (item.State == "PREACTIVO")
                                    {
                                        <td class="col-md-4 text-center"><a href="javascript:void(0);" onclick="CustomerPreactivo()">@item.Telephone</a></td>

                                    }
                           else
                           {
                            <td class="col-md-4 text-center"><a href="javascript:void(0);" onclick="CustomerSearch('@(Model.TypeProduct)', '@(item.Telephone)')">@item.Telephone</a></td>

                           }
                                }
           
                            <td class="col-md-3 text-center">@item.State</td>
                            <td class="col-md-5 text-center">@item.DateActive </td>

                        </tr>
                         }
                    }
                </tbody>
            </table>


            <input type="hidden"  id="hdnidProductDetails"/>
        </div>

    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/Home/ProductDetails")