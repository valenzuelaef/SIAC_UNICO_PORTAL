@using System.Web.Optimization;
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.BillingOtherChargesModel

@{
    Layout = null;
}
<div id="modal-content">
    <div id="FormOtherCharges">
        <div class="panel panel-info ">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-responsive claro-modal-tabla" id="tblOtherCharges">
                    <thead class="claro-bg-primary">
                        <tr>
                            <th class="col-sm-1">Descripci&#243;n</th>
                            <th class="col-sm-1">Importe (S/.) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.listOtherDetails != null)
                        {
                            foreach (var item in Model.listOtherDetails)
                            {
                                <tr>
                                    <td>@item.description - @item.reason</td>
                                    <td>@item.amount</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataBilling/OtherCharges")