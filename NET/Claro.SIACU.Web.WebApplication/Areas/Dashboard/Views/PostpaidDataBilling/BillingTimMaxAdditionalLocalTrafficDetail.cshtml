@using System.Web.Optimization;
@{
    Layout = null;
}

<div id="FormLocalTrafficDetailTM">

    <div class="panel panel-info ">
        <div class="table-responsive">
            <table class="table  table-striped table-hover table-responsive claro-modal-tabla" id="tblLocalTrafficDetailTM">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">Ambito</th>
                        <th class="col-sm-1">Nro. Destino</th>
                        <th class="col-sm-1">Operador Destino</th>
                        <th class="col-sm-1">Fecha</th>
                        <th class="col-sm-1">Hora Inicio Llamada</th>
                        <th class="col-sm-1">Hora Fin Llamada</th>
                        <th class="col-sm-1">Duración</th>
                        <th class="col-sm-1">Importe(S/.)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div id="LoadingPostpaidLocalTrafficDetailTM">
                @*<div align="center"><img src="~/Images/loading2.gif" width="25" height="25" /> Cargando .... </div>*@
            </div>
        </div>

    </div>
</div>
<div class="panel panel-default ">
    <div class="table-responsive">
        <table class="table table-condensed">
            <tr>
                <td class="col-md-1">
                    <label class="control-label">Costo Total Minutos: </label>
                </td>
                <td class="col-md-2"><span id="costTotMinuTM"></span></td>
            </tr>
            <tr>
                <td class="col-md-1">
                    <label class="control-label">Minutos Facturados: </label>
                </td>
                <td class="col-md-2"><span id="minuFactTM"></span></td>
            </tr>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataBilling/LocalTrafficDetailTM")