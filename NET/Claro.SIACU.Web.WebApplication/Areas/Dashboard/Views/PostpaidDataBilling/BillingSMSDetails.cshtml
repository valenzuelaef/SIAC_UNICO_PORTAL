@using System.Web.Optimization;
@{
    Layout = null;
}
<div id="FormSMSDetail">
    <div class="panel panel-info ">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-responsive claro-modal-tabla" id="tblSMSDetail">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">Nro. Destino</th>
                        <th class="col-sm-1">Operadora Destino</th>
                        <th class="col-sm-1">Fecha</th>
                        <th class="col-sm-1">Hora de Envio</th>
                        <th class="col-sm-1">Importe en (S/.)</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
            <div id="errorSMSDetail">
                <div align="center"><img src="~/Images/loading2.gif" width="25" height="25" /> Cargando .... </div>
            </div>
        </div>
    </div>


    <div class="panel panel-default ">
        <div class="table-responsive">
            <table class="table table-condensed">
                <tr>
                    <td class="col-md-1">
                        <label class="control-label">Mensajes Facturados: </label>
                    </td>
                    <td class="col-md-2"><span id="billedMessages"></span></td>
                </tr>
            </table>
        </div>
    </div>

 </div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PostpaidDataBilling/SMSDetail")


