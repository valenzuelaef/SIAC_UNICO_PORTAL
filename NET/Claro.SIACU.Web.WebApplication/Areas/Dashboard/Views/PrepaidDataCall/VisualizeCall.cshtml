@using System.Web.Optimization
@model Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PrepaidDataCall.VisualizeCallModel

@{
    Layout = null;
}

<div id="contenedorVisualizeCallDetail">
    <div class="panel panel-default ">
        <div class="table-responsive">
            <div class="form-group col-sm-10">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-inline">
                            <div class="input-daterange input-group" id="containerDateRange">
                                <span class="input-group-addon"><label class="control-label">Desde:</label></span>
                                <input type="text" id="txtDetailCallDateFrom" class="input-sm form-control" name="txtDetailCallDateFrom" value="@Model.DateFrom" readonly />
                                <label class="input-group-addon btn" for="txtDetailCallDateFrom">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </label>
                                <span class="input-group-addon"><label class="control-label">A:</label></span>
                                <input type="text" id="txtDetailCallDateTo" class="input-sm form-control" name="txtDetailCallDateTo" value="@Model.DateTo" readonly />
                                <label class="input-group-addon btn" for="txtDetailCallDateTo">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </label>
                            </div>&nbsp;&nbsp;
                            <button type="button" class="btn claro-btn-info btn-sm" id="btnSearchDataCall">Buscar</button>
                            <button type="button" class="btn claro-btn-info btn-sm" id="btnClearDataCall">Limpiar</button>
                        </div>
                        <br />
                        <div class="form-inline">
                            <table>
                                <tr>
                                    <td>
                                        <label class="control-label">Tipo de Tráfico:</label>
                                        <select id="cboTrafficType" class="form-control">
                                            @foreach (Claro.SIACU.Web.WebApplication.Areas.Dashboard.Models.PrepaidDataCall.GenericBagModel item in Model.listGenericBagModel)
                                            {
                                                if (@Model.TrafficType == @item.Code)
                                                {
                                                    <option value="@item.Code" selected>@item.Description</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.Code">@item.Description</option>
                                                }
                                            }
                                        </select>
                                    </td>
                                </tr>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="table-responsive divNotScroll">
            <div id="divDetailVisualizeCall">
                <table id="tblDataVisualizeCall" class="table  table-striped table-hover table-responsive claro-modal-tabla table-bordered">
                    <thead class="claro-bg-primary">
                        <tr>
                            <th>Fecha y Hora</th>
                            <th>Teléfono Destino</th>
                            <th>Tipo de Tráfico</th>
                            <th>Duración</th>
                            <th>Consumo</th>
                            <th>Coprado / Regalado</th>
                            <th>Saldo</th>
                            <th>Bolsa ID</th>
                            <th>Descripción</th>
                            <th>Plan</th>
                            <th>Promoción</th>
                            <th>Destino</th>
                            <th>Operador</th>
                            <th>Grupo de Cobro</th>
                            <th>Tipo de Red</th>
                            <th>IMEI</th>
                            <th>Roaming</th>
                            <th>Zona Tarifaria</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <div class="col-md-12">
                <h4>Totales por Tipo de Tráfico</h4>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total General VOZ: </label><div id="voz" class="col-md-6">0</div>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total General SMS: </label><div id="sms" class="col-md-6">0</div>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total General MMS: </label><div id="mms" class="col-md-6">0</div>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total General GPRS (MB): </label><div id="gprs" class="col-md-6">0.00</div>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total Registros: </label><div id="registro" class="col-md-6">0</div>
            </div>
            <div class="col-md-6">

                <label class="col-md-6 text-right">Total Consumo: </label><div id="consumo" class="col-md-6">0.00</div>
            </div>
        </div>
    </div>

</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
@Scripts.Render("~/bundles/Dashboard/PrepaidDataCall/VisualizeCall")