@using System.Web.Optimization;
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-condensed">

            <tr>
                <td class="col-md-12">
                    <div class="col-md-2">
                        <label class="control-label">Nombres Cliente</label>
                    </div>
                    <div class="col-md-2">@Model.NameClient</div>
                    <div class="col-md-2">
                        <label class="control-label">Documento Asociado</label>
                    </div>
                    <div class="col-md-2">@Model.ReferenceDocument</div>

                </td>
            </tr>
            <tr>
                <td class="col-md-12">
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Móvil</label>
                    </div>
                    <div class="col-md-2">@Model.MobileDue</div>
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Fija</label>
                    </div>
                    <div class="col-md-2">@Model.FixedDue</div>

                </td>
            </tr>
            <tr>
                <td class="col-md-12">
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Vencida Móvil</label>
                    </div>
                    <div class="col-md-2">@Model.OverdueMobileDue</div>
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Vencida Fija</label>
                    </div>
                    <div class="col-md-2">@Model.OverdueFixedDue</div>

                </td>
            </tr>
            <tr>
                <td class="col-md-12">
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Castigada Móvil</label>
                    </div>
                    <div class="col-md-2">@Model.PunishedMobileDue</div>
                    <div class="col-md-2">
                        <label class="control-label">Total Deuda Castigada Fija</label>
                    </div>
                    <div class="col-md-2">@Model.PunishedFixedDue</div>

                </td>
            </tr>
            <tr>
                <td class="col-md-12">
                    <div class="col-md-2">
                        <label class="control-label">Antiguedad Deuda</label>
                    </div>
                    <div class="col-md-2">@Model.AntiquityDue</div>
                    <div class="col-md-2">
                        <label class="control-label">Total Servicios</label>
                    </div>
                    <div class="col-md-2">@Model.AllServices</div>

                </td>
            </tr>
        </table>
    </div>

</div>
<div class="row">
    <div class="col-md-12">
        Cuentas en MOVIL
        <div class="table-responsive">
            <table class="table table-hover claro-modal-tabla table-bordered" id="tblDueNumberDocumentMovil">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">Nro</th>
                        <th class="col-sm-1">Código Cliente</th>
                        <th class="col-sm-1">Estado Cuenta</th>
                        <th class="col-sm-1">Promedio Facturado</th>
                        <th class="col-sm-1">Deuda Corriente</th>
                        <th class="col-sm-1">Deuda Vencida</th>
                        <th class="col-sm-1">Deuda Castigada</th>
                        <th class="col-sm-1">Cant. Servicios</th>
                        <th class="col-sm-1">Central Riesgos</th>

                    </tr>
                </thead>
                <tbody>
                    @{

                        if (Model.listCollectionDueDocumentNumberAccountMovil != null)
                        {
                            var num = 0;
                            foreach (var item in Model.listCollectionDueDocumentNumberAccountMovil)
                            {
                                num += 1;
                                <tr>
                                    <td>@num</td>
                                    <td>@item.IdAccount</td>
                                    <td>@item.StatusAccount </td>
                                    <td>@item.AverageInvoiced</td>
                                    <td>@item.CurrentDue</td>
                                    <td>@item.ExpiredDue</td>
                                    <td>@item.PunishedDue</td>
                                    <td>@item.AccountServices</td>
                                    <td>@item.RiskCenter</td>
                                </tr>
                            }
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        Cuentas en FIJA
        <div class="table-responsive">
            <table class="table  table-striped table-hover table-responsive claro-modal-tabla table-bordered" id="tblDueNumberDocumentFija">
                <thead class="claro-bg-primary">
                    <tr>
                        <th class="col-sm-1">Nro</th>
                        <th class="col-sm-1">Código Cliente</th>
                        <th class="col-sm-1">Estado Cuenta</th>
                        <th class="col-sm-1">Promedio Facturado</th>
                        <th class="col-sm-1">Deuda Corriente</th>
                        <th class="col-sm-1">Deuda Vencida</th>
                        <th class="col-sm-1">Deuda Castigada</th>
                        <th class="col-sm-1">Cant. Servicios</th>
                        <th class="col-sm-1">Central Riesgos</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (Model.listCollectionDueDocumentNumberAccountFija != null)
                        {
                            var num = 0;
                            foreach (var item in Model.listCollectionDueDocumentNumberAccountFija)
                            {
                                num += 1;
                                <tr>
                                    <td>@num</td>
                                    <td>@item.IdAccount</td>
                                    <td>@item.StatusAccount </td>
                                    <td>@item.AverageInvoiced</td>
                                    <td>@item.CurrentDue</td>
                                    <td>@item.ExpiredDue</td>
                                    <td>@item.PunishedDue</td>
                                    <td>@item.AccountServices</td>
                                    <td>@item.RiskCenter</td>
                                </tr>
                            }
                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/Content/Lib/BloqueoF12")
